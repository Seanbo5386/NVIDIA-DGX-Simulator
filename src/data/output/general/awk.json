  "synopsis": "awk [options] 'program' [file...]",
  "version_documented": "GNU awk 5.1+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/gawk.1.html"],
  "installation": {
    "package": "gawk",
    "notes": "GNU awk recommended for HPC use."
  },
  "global_options": [
    {
      "short": "-F",
      "long": "--field-separator",
      "description": "Set field separator",
      "arguments": "<fs>",
      "argument_type": "string"
    },
    {
      "short": "-v",
      "long": "--assign",
      "description": "Assign variable",
      "arguments": "<var=value>",
      "argument_type": "string"
    },
    {
