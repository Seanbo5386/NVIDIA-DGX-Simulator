    {
      "code": 2,
      "meaning": "Fatal error"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Print column",
      "command": "awk '{print $2}' file.txt",
      "requires_root": false
    },
    {
      "description": "Sum column values",
      "command": "awk '{sum+=$1} END {print sum}' numbers.txt",
      "requires_root": false
    },
    {
      "description": "Filter by pattern",
      "command": "awk '/ERROR/ {print $0}' job.log",
      "requires_root": false
    },
    {
      "description": "Custom delimiter",
      "command": "awk -F',' '{print $1, $3}' data.csv",
      "requires_root": false
    },
    {
      "description": "Parse nvidia-smi",
      "command": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader | awk '{sum+=$1} END {print \"Avg:\", sum/NR}'",
      "requires_root": false
    },
    {
      "description": "Calculate statistics",
      "command": "awk '{sum+=$1; sumsq+=$1*$1} END {print \"Mean:\", sum/NR, \"StdDev:\", sqrt(sumsq/NR - (sum/NR)^2)}' metrics.txt",
      "requires_root": false
    },
    {
      "description": "Parse SLURM output",
      "command": "squeue -u $USER -o '%i %T %M' | awk 'NR>1 {print $1, $2}'",
      "requires_root": false
    }
  ],
