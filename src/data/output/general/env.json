{
  "command": "env",
  "category": "general",
  "description": "Display, set, or modify environment variables, or run a command in a modified environment. Essential for HPC workflows to verify CUDA paths, MPI settings, module configurations, and debugging environment issues in job scripts.",
  "synopsis": "env [OPTION]... [-] [NAME=VALUE]... [COMMAND [ARG]...]",
  "version_documented": "coreutils 8.32+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/env.1.html"],
  "installation": {
    "package": "coreutils",
    "notes": "Part of GNU coreutils, installed by default on all Linux distributions."
  },
  "global_options": [
    {
      "short": "-i",
      "long": "--ignore-environment",
      "description": "Start with an empty environment, ignoring inherited variables"
    },
    {
      "short": "-0",
      "long": "--null",
      "description": "End each output line with NUL instead of newline"
    },
    {
      "short": "-u",
      "long": "--unset",
      "description": "Remove specified variable from the environment",
      "arguments": "NAME",
      "argument_type": "string",
      "example": "env -u LD_LIBRARY_PATH ./myprogram"
    },
    {
      "short": "-C",
      "long": "--chdir",
      "description": "Change working directory before running command",
      "arguments": "DIR",
      "argument_type": "path"
    },
    {
      "short": "-S",
      "long": "--split-string",
      "description": "Process and split string into separate arguments",
      "arguments": "STRING",
      "argument_type": "string"
    },
    {
      "long": "--help",
      "description": "Display help information"
    },
    {
      "long": "--version",
      "description": "Display version information"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Success - command executed or environment displayed"
    },
    {
      "code": 125,
      "meaning": "env command itself failed"
    },
    {
      "code": 126,
      "meaning": "Command was found but could not be invoked"
    },
    {
      "code": 127,
      "meaning": "Command could not be found"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Display all environment variables",
      "command": "env",
      "requires_root": false
    },
    {
      "description": "Display environment sorted alphabetically",
      "command": "env | sort",
      "requires_root": false
    },
    {
      "description": "Check CUDA-related environment variables",
      "command": "env | grep -i cuda",
      "output_example": "CUDA_HOME=/usr/local/cuda\nCUDA_VISIBLE_DEVICES=0,1,2,3\nPATH=/usr/local/cuda/bin:/usr/bin",
      "requires_root": false
    },
    {
      "description": "Check MPI environment variables",
      "command": "env | grep -i -E '(MPI|OMPI|PMI)'",
      "requires_root": false
    },
    {
      "description": "Run command with specific CUDA device",
      "command": "env CUDA_VISIBLE_DEVICES=0 ./my_cuda_app",
      "requires_root": false
    },
    {
      "description": "Run with clean environment plus specific variables",
      "command": "env -i PATH=/usr/bin HOME=$HOME ./script.sh",
      "requires_root": false
    },
    {
      "description": "Run without LD_PRELOAD (common for debugging)",
      "command": "env -u LD_PRELOAD ./application",
      "requires_root": false
    },
    {
      "description": "Check Slurm job environment",
      "command": "env | grep SLURM",
      "output_example": "SLURM_JOB_ID=12345\nSLURM_NODELIST=node[001-004]\nSLURM_NTASKS=16",
      "requires_root": false
    },
    {
      "description": "Check loaded modules environment",
      "command": "env | grep -i module",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "env: command not found",
      "meaning": "PATH does not include coreutils location",
      "resolution": "Use full path /usr/bin/env or fix PATH"
    },
    {
      "message": "env: 'command': No such file or directory",
      "meaning": "Specified command does not exist",
      "resolution": "Verify command path and spelling"
    },
    {
      "message": "env: 'command': Permission denied",
      "meaning": "Command exists but is not executable",
      "resolution": "Check file permissions with ls -la"
    }
  ],
  "interoperability": {
    "related_commands": ["export", "printenv", "set", "unset", "module"],
    "notes": "Commonly used in shebang lines (#!/usr/bin/env python) for portability. In HPC contexts, env is essential for debugging job scripts and verifying module configurations."
  },
  "permissions": {
    "read_operations": "No special permissions required",
    "write_operations": "N/A - env modifies process environment, not system state",
    "notes": "Environment modifications only affect the spawned process and its children"
  },
  "limitations": [
    "Cannot modify parent shell's environment",
    "Environment changes are process-local only",
    "Does not expand shell variables when setting (use shell for that)",
    "Maximum environment size is system-dependent"
  ],
  "state_interactions": {
    "reads_from": [
      {
        "state_domain": "system_state",
        "fields": ["environment_variables", "path", "library_path"],
        "description": "Reads current process environment inherited from parent"
      }
    ],
    "writes_to": [],
    "triggered_by": [
      {
        "state_change": "Module load/unload",
        "effect": "Environment variables change (PATH, LD_LIBRARY_PATH, etc.)"
      },
      {
        "state_change": "Slurm job start",
        "effect": "SLURM_* environment variables are set"
      }
    ],
    "consistent_with": [
      {
        "command": "printenv",
        "shared_state": "Shows same environment variables"
      },
      {
        "command": "module list",
        "shared_state": "Loaded modules reflected in environment"
      }
    ]
  }
}
