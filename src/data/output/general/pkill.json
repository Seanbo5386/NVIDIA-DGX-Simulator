{
  "command": "pkill",
  "category": "general",
  "description": "Signal processes by name pattern. Kills processes matching a pattern without needing PIDs. Essential for terminating multiple instances of HPC applications.",
  "synopsis": "pkill [options] <pattern>",
  "version_documented": "procps 3.3+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/pkill.1.html"],
  "installation": {
    "package": "procps",
    "notes": "Part of procps, installed by default."
  },
  "global_options": [
    {
      "short": "-signal",
      "description": "Signal to send",
      "arguments": "<signal>",
      "argument_type": "string"
    },
    {
      "short": "-u",
      "long": "--uid",
      "description": "Match by user",
      "arguments": "<user>",
      "argument_type": "string"
    },
    {
      "short": "-f",
      "long": "--full",
      "description": "Match against full command line"
    },
    {
      "short": "-x",
      "long": "--exact",
      "description": "Exact match only"
    },
    {
      "short": "-n",
      "long": "--newest",
      "description": "Kill newest matching process"
    },
    {
      "short": "-o",
      "long": "--oldest",
      "description": "Kill oldest matching process"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Matched and signaled"
    },
    {
      "code": 1,
      "meaning": "No match"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Kill by process name",
      "command": "pkill python",
      "requires_root": false
    },
    {
      "description": "Kill user's processes",
      "command": "pkill -u $USER python",
      "requires_root": false
    },
    {
      "description": "Kill by full command",
      "command": "pkill -f 'train.py'",
      "requires_root": false
    },
    {
      "description": "Force kill",
      "command": "pkill -9 myapp",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "pkill: Operation not permitted",
      "meaning": "Cannot signal processes",
      "resolution": "Check ownership or run as root"
    }
  ],
  "interoperability": {
    "related_commands": ["pgrep", "kill", "killall", "ps"],
    "notes": "pkill uses same matching as pgrep. Use pgrep first to verify matches. -f is useful for Python scripts where process name is 'python'."
  },
  "permissions": {
    "read_operations": "N/A",
    "write_operations": "Can only kill own processes",
    "notes": "Root can kill any"
  },
  "limitations": [
    "Pattern matching can be dangerous",
    "Test with pgrep first",
    "May kill unintended processes"
  ],
  "state_interactions": {
    "reads_from": [],
    "writes_to": [
      {
        "state_domain": "gpu_process_state",
        "fields": ["pid"],
        "description": "Terminates matching processes",
        "requires_privilege": "process owner"
      }
    ],
    "triggered_by": [],
    "consistent_with": [
      {
        "command": "pgrep",
        "shared_state": "Uses same pattern matching"
      }
    ]
  }
}
