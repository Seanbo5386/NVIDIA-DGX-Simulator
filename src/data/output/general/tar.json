{
  "command": "tar",
  "category": "general",
  "description": "Archive utility for creating and extracting tar archives. Handles compressed archives (gzip, bzip2, xz). Essential for data transfer and backup in HPC environments.",
  "synopsis": "tar [options] [archive] [files]",
  "version_documented": "GNU tar 1.34+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/tar.1.html"],
  "installation": {
    "package": "tar",
    "notes": "Part of GNU tar, installed by default."
  },
  "global_options": [
    {
      "short": "-c",
      "long": "--create",
      "description": "Create archive"
    },
    {
      "short": "-x",
      "long": "--extract",
      "description": "Extract archive"
    },
    {
      "short": "-t",
      "long": "--list",
      "description": "List contents"
    },
    {
      "short": "-f",
      "long": "--file",
      "description": "Archive file name",
      "arguments": "<file>",
      "argument_type": "path"
    },
    {
      "short": "-z",
      "long": "--gzip",
      "description": "Use gzip compression"
    },
    {
      "short": "-j",
      "long": "--bzip2",
      "description": "Use bzip2 compression"
    },
    {
      "short": "-J",
      "long": "--xz",
      "description": "Use xz compression"
    },
    {
      "short": "-v",
      "long": "--verbose",
      "description": "Verbose output"
    },
    {
      "short": "-C",
      "long": "--directory",
      "description": "Change to directory",
      "arguments": "<dir>",
      "argument_type": "path"
    },
    {
      "long": "--exclude",
      "description": "Exclude pattern",
      "arguments": "<pattern>",
      "argument_type": "string"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Success"
    },
    {
      "code": 1,
      "meaning": "Some files differ"
    },
    {
      "code": 2,
      "meaning": "Fatal error"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Create gzipped archive",
      "command": "tar -czvf archive.tar.gz /data/results",
      "requires_root": false
    },
    {
      "description": "Extract archive",
      "command": "tar -xzvf archive.tar.gz",
      "requires_root": false
    },
    {
      "description": "Extract to specific directory",
      "command": "tar -xzvf archive.tar.gz -C /scratch",
      "requires_root": false
    },
    {
      "description": "List contents",
      "command": "tar -tzvf archive.tar.gz",
      "requires_root": false
    },
    {
      "description": "Exclude patterns",
      "command": "tar -czvf backup.tar.gz --exclude='*.log' /project",
      "requires_root": false
    },
    {
      "description": "Create with xz (better compression)",
      "command": "tar -cJvf archive.tar.xz /data",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "tar: Cannot open: No such file or directory",
      "meaning": "Source file/archive not found",
      "resolution": "Check path exists"
    },
    {
      "message": "tar: Error is not recoverable: exiting now",
      "meaning": "Fatal error during operation",
      "resolution": "Check disk space and permissions"
    }
  ],
  "interoperability": {
    "related_commands": ["gzip", "bzip2", "xz", "rsync", "zip"],
    "notes": "Compression: gzip (-z) fastest, xz (-J) smallest. For HPC data transfers, balance compression speed vs size. pigz/pbzip2 for parallel compression."
  },
  "permissions": {
    "read_operations": "Read access to files",
    "write_operations": "Write access to destination",
    "notes": "Preserves permissions with -p flag"
  },
  "limitations": [
    "Single-threaded by default",
    "Use pigz for parallel gzip",
    "Large archives slow to access randomly"
  ],
  "state_interactions": {
    "reads_from": [
      {
        "state_domain": "storage_local_state",
        "fields": ["files"],
        "description": "Reads files for archiving"
      }
    ],
    "writes_to": [
      {
        "state_domain": "storage_local_state",
        "fields": ["files"],
        "description": "Creates archive files",
        "requires_privilege": "write access"
      }
    ],
    "triggered_by": [],
    "consistent_with": [
      {
        "command": "du",
        "shared_state": "Archive size comparable to source"
      }
    ]
  }
}
