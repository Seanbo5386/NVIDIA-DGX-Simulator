{
  "command": "timeout",
  "category": "general",
  "description": "Run command with time limit. Kills command after specified duration. Useful for HPC job scripts to enforce time limits.",
  "synopsis": "timeout [options] <duration> <command> [args]",
  "version_documented": "coreutils 8.32+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/timeout.1.html"],
  "installation": {
    "package": "coreutils",
    "notes": "Part of coreutils, installed by default."
  },
  "global_options": [
    {
      "short": "-s",
      "long": "--signal",
      "description": "Signal to send",
      "arguments": "<signal>",
      "argument_type": "string"
    },
    {
      "short": "-k",
      "long": "--kill-after",
      "description": "Kill after grace period",
      "arguments": "<duration>",
      "argument_type": "string"
    },
    {
      "long": "--preserve-status",
      "description": "Return command's exit status"
    },
    {
      "long": "--foreground",
      "description": "Don't create process group"
    },
    {
      "short": "-v",
      "long": "--verbose",
      "description": "Report timeout"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Command succeeded"
    },
    {
      "code": 124,
      "meaning": "Command timed out"
    },
    {
      "code": 125,
      "meaning": "timeout failed"
    },
    {
      "code": 126,
      "meaning": "Command found but not executable"
    },
    {
      "code": 127,
      "meaning": "Command not found"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "30 second timeout",
      "command": "timeout 30s ./my_command",
      "requires_root": false
    },
    {
      "description": "5 minute timeout",
      "command": "timeout 5m ./long_running_job",
      "requires_root": false
    },
    {
      "description": "With SIGKILL fallback",
      "command": "timeout -k 10s 60s ./stubborn_process",
      "requires_root": false
    },
    {
      "description": "Custom signal",
      "command": "timeout -s SIGINT 30s ./interruptible_app",
      "requires_root": false
    },
    {
      "description": "Preserve exit status",
      "command": "timeout --preserve-status 1h ./benchmark",
      "requires_root": false
    },
    {
      "description": "Verbose timeout",
      "command": "timeout -v 10s sleep 20",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "invalid time interval",
      "meaning": "Bad duration format",
      "resolution": "Use format like 30s, 5m, 1h, 1d"
    }
  ],
  "interoperability": {
    "related_commands": ["kill", "sleep", "watch"],
    "notes": "Duration: s=seconds, m=minutes, h=hours, d=days. Exit 124 indicates timeout. -k sends SIGKILL after grace period."
  },
  "permissions": {
    "read_operations": "N/A",
    "write_operations": "N/A",
    "notes": "Standard user for own processes"
  },
  "limitations": [
    "Child processes may survive",
    "Uses signals (command must handle)",
    "Foreground mode has limitations"
  ],
  "state_interactions": {
    "reads_from": [],
    "writes_to": [
      {
        "state_domain": "system_state",
        "fields": ["processes"],
        "description": "May terminate processes",
        "requires_privilege": "process owner"
      }
    ],
    "triggered_by": [],
    "consistent_with": [
      {
        "command": "kill",
        "shared_state": "timeout uses kill to terminate"
      }
    ]
  }
}
