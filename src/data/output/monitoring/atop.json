{
  "command": "atop",
  "category": "monitoring",
  "description": "Advanced system and process monitor. Shows CPU, memory, disk, network metrics with per-process breakdown. Records history for post-mortem analysis.",
  "synopsis": "atop [options] [interval [count]]",
  "version_documented": "atop 2.6+",
  "source_urls": ["https://www.atoptool.nl/downloadatop.php"],
  "installation": {
    "package": "atop",
    "notes": "Install via: apt install atop or yum install atop"
  },
  "global_options": [
    {
      "short": "-r",
      "description": "Read from log file",
      "arguments": "<file>",
      "argument_type": "path"
    },
    {
      "short": "-w",
      "description": "Write to log file",
      "arguments": "<file>",
      "argument_type": "path"
    },
    {
      "short": "-a",
      "description": "Show all processes"
    },
    {
      "short": "-1",
      "description": "Show per-CPU statistics"
    },
    {
      "short": "-m",
      "description": "Show memory info"
    },
    {
      "short": "-d",
      "description": "Show disk info"
    },
    {
      "short": "-n",
      "description": "Show network info"
    },
    {
      "short": "-g",
      "description": "Show GPU info (if available)"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Success"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Interactive mode",
      "command": "atop",
      "requires_root": true
    },
    {
      "description": "5 second intervals",
      "command": "atop 5",
      "requires_root": true
    },
    {
      "description": "Per-CPU view",
      "command": "atop -1",
      "requires_root": true
    },
    {
      "description": "Read historical data",
      "command": "atop -r /var/log/atop/atop_20240315",
      "requires_root": true
    },
    {
      "description": "Record to file",
      "command": "atop -w /tmp/atop.log 10 360",
      "requires_root": true
    }
  ],
  "error_messages": [
    {
      "message": "root privileges required",
      "meaning": "Need root for all features",
      "resolution": "Run with sudo"
    }
  ],
  "interoperability": {
    "related_commands": ["top", "htop", "sar", "nmon"],
    "notes": "atop daemon can record to /var/log/atop. Interactive keys: m=memory, d=disk, n=network, g=GPU, c=cmdline, p=process. Excellent for post-mortem analysis."
  },
  "permissions": {
    "read_operations": "Root for full details",
    "write_operations": "Root for recording",
    "notes": "Some features work without root"
  },
  "limitations": [
    "Resource intensive for recording",
    "Log files can be large",
    "GPU support varies"
  ],
  "state_interactions": {
    "reads_from": [
      {
        "state_domain": "system_state",
        "fields": ["cpu_count", "memory_total"],
        "description": "Reads comprehensive system metrics"
      },
      {
        "state_domain": "storage_local_state",
        "fields": ["device"],
        "description": "Monitors disk I/O"
      },
      {
        "state_domain": "network_eth_state",
        "fields": ["interface"],
        "description": "Monitors network traffic"
      }
    ],
    "writes_to": [],
    "triggered_by": [
      {
        "state_change": "System activity",
        "effect": "Metrics update"
      }
    ],
    "consistent_with": [
      {
        "command": "top",
        "shared_state": "CPU and process metrics match"
      },
      {
        "command": "iostat",
        "shared_state": "Disk metrics correlate"
      }
    ]
  }
}
