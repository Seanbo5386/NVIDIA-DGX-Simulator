{
  "command": "ib_send_bw",
  "category": "rdma_perf",
  "description": "RDMA send bandwidth benchmark for InfiniBand and RoCE networks. Measures uni-directional or bi-directional bandwidth using RDMA send/receive operations. Part of the perftest suite for validating fabric performance.",
  "synopsis": "ib_send_bw [options] [server_ip]",
  "version_documented": "perftest 4.5+",
  "source_urls": ["https://github.com/linux-rdma/perftest"],
  "installation": {
    "package": "perftest",
    "notes": "Install via: apt install perftest or yum install perftest"
  },
  "global_options": [
    {
      "short": "-d",
      "long": "--ib-dev",
      "description": "Use specified IB device",
      "arguments": "<dev>",
      "argument_type": "string",
      "example": "-d mlx5_0"
    },
    {
      "short": "-i",
      "long": "--ib-port",
      "description": "Use specified port of IB device",
      "arguments": "<port>",
      "argument_type": "integer",
      "default": "1"
    },
    {
      "short": "-s",
      "long": "--size",
      "description": "Message size in bytes",
      "arguments": "<size>",
      "argument_type": "integer",
      "default": "65536"
    },
    {
      "short": "-n",
      "long": "--iters",
      "description": "Number of iterations",
      "arguments": "<iters>",
      "argument_type": "integer",
      "default": "1000"
    },
    {
      "short": "-b",
      "long": "--bidirectional",
      "description": "Run bidirectional test"
    },
    {
      "short": "-a",
      "long": "--all",
      "description": "Run all message sizes"
    },
    {
      "short": "-q",
      "long": "--qp",
      "description": "Number of queue pairs",
      "arguments": "<num>",
      "argument_type": "integer",
      "default": "1"
    },
    {
      "short": "-t",
      "long": "--tx-depth",
      "description": "Transmit queue depth",
      "arguments": "<depth>",
      "argument_type": "integer"
    },
    {
      "short": "-p",
      "long": "--port",
      "description": "TCP port for connection setup",
      "arguments": "<port>",
      "argument_type": "integer",
      "default": "18515"
    },
    {
      "long": "--output",
      "description": "Output type",
      "arguments": "<bandwidth|message_rate>",
      "argument_type": "string"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Success"
    },
    {
      "code": 1,
      "meaning": "Error"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Run as server (listening mode)",
      "command": "ib_send_bw",
      "requires_root": false
    },
    {
      "description": "Run as client connecting to server",
      "command": "ib_send_bw 192.168.1.100",
      "output_example": "#bytes     #iterations    BW peak[Gb/sec]    BW average[Gb/sec]   MsgRate[Mpps]\n 65536      1000             189.45              188.92               0.360342",
      "requires_root": false
    },
    {
      "description": "Run bidirectional test",
      "command": "ib_send_bw -b 192.168.1.100",
      "requires_root": false
    },
    {
      "description": "Test all message sizes",
      "command": "ib_send_bw -a 192.168.1.100",
      "requires_root": false
    },
    {
      "description": "Use multiple queue pairs",
      "command": "ib_send_bw -q 4 192.168.1.100",
      "requires_root": false
    },
    {
      "description": "Use specific IB device",
      "command": "ib_send_bw -d mlx5_0 -i 1 192.168.1.100",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "Unable to find any IB devices",
      "meaning": "No InfiniBand devices detected",
      "resolution": "Verify IB drivers are loaded and device is present"
    },
    {
      "message": "Couldn't connect to server",
      "meaning": "TCP connection for setup failed",
      "resolution": "Verify server is running, IP is correct, port is open"
    }
  ],
  "interoperability": {
    "related_commands": [
      "ib_write_bw",
      "ib_read_bw",
      "ib_send_lat",
      "ibstat",
      "perfquery"
    ],
    "notes": "ib_send_bw uses RDMA send/receive which requires both sides to participate. For one-sided operations, use ib_write_bw or ib_read_bw. HDR InfiniBand should achieve ~200 Gb/s (~24 GB/s) per port."
  },
  "permissions": {
    "read_operations": "No special permissions for basic operation",
    "write_operations": "N/A - benchmark tool",
    "notes": "May require CAP_NET_RAW for some modes"
  },
  "limitations": [
    "Synthetic benchmark may not reflect application performance",
    "Single connection unless -q specified",
    "Requires coordinated execution on both endpoints",
    "Results affected by MTU and other fabric settings"
  ],
  "state_interactions": {
    "reads_from": [
      {
        "state_domain": "network_ib_state",
        "fields": ["device", "port", "state", "rate"],
        "description": "Reads IB port state for benchmark execution"
      }
    ],
    "writes_to": [],
    "triggered_by": [
      {
        "state_change": "Link state change",
        "effect": "Benchmark fails if link goes down"
      }
    ],
    "consistent_with": [
      {
        "command": "ib_write_bw",
        "shared_state": "Bandwidth results should be similar for large messages"
      },
      {
        "command": "ibstat",
        "shared_state": "Link rate determines maximum achievable bandwidth"
      }
    ]
  }
}
