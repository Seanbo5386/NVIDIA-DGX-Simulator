{
  "command": "dd",
  "category": "storage",
  "description": "Convert and copy files with low-level I/O. Performs raw disk copies, creates disk images, and benchmarks I/O. Essential for storage testing and data recovery.",
  "synopsis": "dd [options]",
  "version_documented": "coreutils 8.32+",
  "source_urls": ["https://man7.org/linux/man-pages/man1/dd.1.html"],
  "installation": {
    "package": "coreutils",
    "notes": "Part of coreutils, installed by default on all Linux distributions."
  },
  "global_options": [
    {
      "long": "if=",
      "description": "Input file",
      "arguments": "<file>",
      "argument_type": "path"
    },
    {
      "long": "of=",
      "description": "Output file",
      "arguments": "<file>",
      "argument_type": "path"
    },
    {
      "long": "bs=",
      "description": "Block size for read and write",
      "arguments": "<size>",
      "argument_type": "string",
      "example": "bs=1M"
    },
    {
      "long": "count=",
      "description": "Number of blocks to copy",
      "arguments": "<n>",
      "argument_type": "integer"
    },
    {
      "long": "status=",
      "description": "Status output level (none, noxfer, progress)",
      "arguments": "<level>",
      "argument_type": "string"
    },
    {
      "long": "iflag=",
      "description": "Input flags",
      "arguments": "<flags>",
      "argument_type": "string",
      "example": "iflag=direct"
    },
    {
      "long": "oflag=",
      "description": "Output flags",
      "arguments": "<flags>",
      "argument_type": "string",
      "example": "oflag=direct,sync"
    },
    {
      "long": "conv=",
      "description": "Conversion options",
      "arguments": "<options>",
      "argument_type": "string"
    }
  ],
  "exit_codes": [
    {
      "code": 0,
      "meaning": "Success"
    },
    {
      "code": 1,
      "meaning": "Error"
    }
  ],
  "common_usage_patterns": [
    {
      "description": "Simple write bandwidth test",
      "command": "dd if=/dev/zero of=/scratch/testfile bs=1M count=1024 oflag=direct status=progress",
      "output_example": "1073741824 bytes (1.1 GB, 1.0 GiB) copied, 0.8 s, 1.3 GB/s\n1024+0 records in\n1024+0 records out\n1073741824 bytes (1.1 GB, 1.0 GiB) copied, 0.823456 s, 1.3 GB/s",
      "requires_root": false
    },
    {
      "description": "Read bandwidth test",
      "command": "dd if=/scratch/testfile of=/dev/null bs=1M status=progress",
      "requires_root": false
    },
    {
      "description": "Create disk image",
      "command": "dd if=/dev/nvme0n1 of=/backup/disk.img bs=4M status=progress",
      "requires_root": true
    },
    {
      "description": "Wipe disk with zeros",
      "command": "dd if=/dev/zero of=/dev/nvme1n1 bs=1M status=progress",
      "requires_root": true
    },
    {
      "description": "Direct I/O test (bypass cache)",
      "command": "dd if=/dev/zero of=/scratch/test bs=1M count=10240 oflag=direct conv=fdatasync",
      "requires_root": false
    },
    {
      "description": "Test latency with small block",
      "command": "dd if=/dev/zero of=/scratch/test bs=4k count=10000 oflag=direct conv=fdatasync",
      "requires_root": false
    }
  ],
  "error_messages": [
    {
      "message": "dd: failed to open",
      "meaning": "Cannot access file or device",
      "resolution": "Check path and permissions"
    },
    {
      "message": "dd: writing: No space left on device",
      "meaning": "Target full",
      "resolution": "Free space or use count= to limit size"
    }
  ],
  "interoperability": {
    "related_commands": ["fio", "hdparm", "cp", "rsync"],
    "notes": "dd is basic but reliable. For accurate benchmarks, use oflag=direct to bypass cache, conv=fdatasync to sync before timing. For detailed benchmarks, prefer fio."
  },
  "permissions": {
    "read_operations": "User access to source",
    "write_operations": "User access to destination",
    "notes": "Raw device access requires root"
  },
  "limitations": [
    "No progress by default (use status=progress)",
    "Dangerous - can overwrite data",
    "Basic compared to fio for benchmarks"
  ],
  "state_interactions": {
    "reads_from": [
      {
        "state_domain": "storage_local_state",
        "fields": ["device"],
        "description": "Reads from storage devices"
      }
    ],
    "writes_to": [
      {
        "state_domain": "storage_local_state",
        "fields": ["device", "files"],
        "description": "Writes to storage devices or files",
        "requires_privilege": "write access"
      }
    ],
    "triggered_by": [],
    "consistent_with": [
      {
        "command": "fio",
        "shared_state": "Sequential bandwidth should match"
      },
      {
        "command": "iostat",
        "shared_state": "I/O activity visible during dd"
      }
    ]
  }
}
